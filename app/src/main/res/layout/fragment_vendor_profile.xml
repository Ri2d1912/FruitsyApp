                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Policy"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of policy 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shoppolicyiconnone2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shoppolicyDescrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- description of contact number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopPolicyiconNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shoppolicyiconnone3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />

                    <!-- Address text next to the icon -->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/VendorsInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor's Information"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="start"/>

                <Button
                    android:id="@+id/vendorprofileeditbutton"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/bottom_sheet_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendoraccounticon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_vendor_user" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vendorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Richard Jr L. Caprio"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of address -->

                <!-- Icon with Address Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendorIconaddress"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_location" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendoraddressIconNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vendorDescAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Diamond Street, Tenejero,, Balanga City, Bataan"/>


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- Icon with store hours Section -->


                <!-- Icon with Contact Number Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendorcallicon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_add_call_24" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vendorContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of contact number 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendorIconNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vednorContactDescrip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number:"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>



                <!-- Icon with Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendorEmailIcon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_email" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vendorEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/vendoremailNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/vendorEmailInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="richardfruitshop@gmail.com"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</FrameLayout>
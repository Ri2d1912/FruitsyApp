                    android:id="@+id/description1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A one-stop fruit shop catering your healthy needs in the heart of Blanaga City Btaana"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"/> <!-- Space between description and icon -->

                <!-- Icon with Address Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopIconaddress"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_location" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopAddress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopIconNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopDescAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Diamond Street, Tenejero,, Balanga City, Bataan"/>


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- Icon with store hours Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopstorehoursIcon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/clock_icon" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopStorehours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Hourse"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of store hours -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopstorehoursIconNone"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopstorehoursdescrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:00AM - 5:00PM"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- Icon with Contact Number Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopcallicon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_add_call_24" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of contact number 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopIcon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopContactDescrip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number:"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- description of contact number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopIconNone7"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopContactDescrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telephone Number:"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>

                <!-- Icon with Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/shopEmailIcon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_email" /> <!-- Icon for shop -->

                    <TextView
                        android:id="@+id/shopEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />


                    <!-- Address text next to the icon -->
                </LinearLayout>
                <!-- description of email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">


                    <ImageView

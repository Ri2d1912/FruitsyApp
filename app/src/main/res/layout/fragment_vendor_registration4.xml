<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFragment.VendorRegistrationFragment4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/userShopPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo of Shop"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/userLabelAttachShopImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach image"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAttachFileImage"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Attach File"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/btnorangeradius"/>

            <TextView
                android:id="@+id/userLabelreqDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Documents"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/userLabelDti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DTI"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAttachFileDti"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Attach File"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/btnorangeradius"/>

            <TextView
                android:id="@+id/userLabelBir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIR"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAttachFileBir"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Attach File"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/btnorangeradius"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>

                    android:layout_height="250dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="16dp">


<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFragment.VendorRegistrationFragment2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/userLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor Name"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/userLabelFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorFname"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your first name"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelMname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorMname"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your middle name"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelLname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorLname"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your last name"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelExname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extension Name"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorExname"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your extension name"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <Spinner
                android:id="@+id/spinnerVendorGender"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:entries="@array/gender_options"/>

            <TextView
                android:id="@+id/userLabelBday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutBday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editVendorBday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="MM/DD/YYYY"
                    android:inputType="none"
                    android:maxLength="10"
                    android:importantForAccessibility="yes"
                    android:contentDescription="Birthday input field"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/userLabelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/userLabelStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorStreet"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your street"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelBarangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barangay"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorBarangay"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your barangay"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorCity"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your city"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorProvince"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your province"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelPostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorPostal"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your postal code"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/editVendorMobileNo"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Enter your mobile number"
                android:inputType="text"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/userLabelValidId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid ID"
                android:textColor="#FFA710"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/userLabelAttachImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach image"
                android:textColor="#FFA710"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"/>

            <ImageView
                android:id="@+id/imgViewValidId"
                android:layout_width="130dp"
                android:layout_marginTop="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/upimg"
                android:layout_marginLeft="16dp"/>



        </LinearLayout>
    </ScrollView>

</FrameLayout>
